<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.obiangetfils.notepad">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:windowSoftInputMode="adjustResize"
            android:name="com.obiangetfils.notepad.controller.NoteDetailActivity"
            android:parentActivityName="com.obiangetfils.notepad.controller.NoteListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.obiangetfils.notepad.controller.NoteListActivity" />
        </activity>

        <activity android:name="com.obiangetfils.notepad.controller.NoteListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>